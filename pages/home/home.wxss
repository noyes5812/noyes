.page{overflow: hidden}

.page-body {
  margin: 0;
  padding: 0;
}

.slide-image {
  width: 100%;
  height: 160px;
}

.placeholder {
  margin: 10rpx;
  width: auto;
}

/****grid-button***/

.wrap_grids {
  height: 100%;
  width: 100%;
  display: flex;
  overflow: hidden;
  margin-top: 20rpx;
  /* margin:15px 0;
  border: 0; */
}

.wrap_grid {
  width: 25%; /*微信小程序獨有的像素單位，隨屏幕分辨率動態變化*//* border: 1px solid #fff; */
  height: 152rpx;
  text-align: center;
}

.color-bg {
  height: 82rpx;
  width: 82rpx;
  /* background: red; */
  border-radius: 50%;
  margin: 0 auto;
  line-height: 82rpx;
  background: red;
}

.wrap_grid_icon {
  /* 居中 */
  margin: 0 auto;
  display: flex;
  /* justify-content: center; */
  overflow: hidden;
  width: 58rpx;
  height: 58rpx;
  line-height: 82rpx;
  padding-top: 10rpx;
}

.wrap_grid_label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*****/

.page-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
  padding-top:10rpx;
   padding-left: 20rpx; 
  padding-right: 30rpx;
  display:inline-flex;

}

.page-section-spacing {
  box-sizing: border-box;
  padding-left: 20rpx;
}

scroll-view {
  display: block;
  width: 100%;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item {
  height: 280rpx;
}

.scroll-view-item_H {
  display: inline-block;
  /* width: 100%; */
  height: 300rpx;
  width: 85%;
}

.scroll-view-item_H image {
  width: 95%;
}

